{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "indent": ["error", 4],
        "no-multi-spaces": ["error"],
        "linebreak-style": 0,
        "max-len": ["error", { "code": 130 }],
        "require-jsdoc": 0
      }
}
